<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <%= form_with model: @user, url: users_path, local: true do |f| %>
        <div class="mb-3" style="margin-top: 150px;>
        <div>
          <%= f.label :ユーザ名, class: "form-label" %>
          </div>
          <div>
          <%= f.text_field :name, class: "form-control", style: "font-size: 20px; width: 300px; padding: 10px;  margin-top: 20px; margin-bottom:40px;" %> 
        </div>
        </div>
        <div class="mb-3">
        <div>
          <%= f.label :メールアドレス, class: "form-label" %>
        </div>
        <div>
          <%= f.email_field :email, class: "form-control", style: "font-size: 20px; width: 300px; padding: 10px;  margin-top: 20px; margin-bottom:40px;" %>
        </div>
          </div>
        <div class="mb-3">
        <div>
          <%= f.label :パスワード, class: "form-label" %>
        </div>
        <div>
          <%= f.password_field :password, class: "form-control", style: "font-size: 20px; width: 300px; padding: 10px;  margin-top: 20px; margin-bottom:40px;" %>
        </div>
        </div>
        <div class="mb-3" style="text-align: center; margin-bottom: 20px;">
        <%= button_tag(type: 'submit', style: "background: none; border: none; padding: 0;") do %>
          <%= image_tag("new.png", alt: "新規登録", style: "width: 130px; height: auto;") %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
