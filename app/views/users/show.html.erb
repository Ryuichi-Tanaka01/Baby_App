<% if logged_in? %>
  <div style="margin: 20px;">
    <table style="width: 100%; border-collapse: collapse; background-color: white; margin: 0 auto;">
      <thead style="background-color: #f0f8ff;">
        <tr>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">日時</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">記録した人</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">うんち</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">みるく</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">おしっこ</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;">備考</th>
          <th style="padding: 12px; text-align: left; border: 1px solid lightblue;"></th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |record| %>
          <tr>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
              <%= record.created_at.strftime('%Y/%m/%d %H:%M') %>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
              <%= record.recorder.name %>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
              <%= record.flight_category.color %>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
              <%= record.breastmilk_amount%>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
            <%= record.has_urinated ? "した" : "していない" %>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
              <%= record.remarks %>
            </td>
            <td style="padding: 12px; text-align: left; border: 1px solid lightblue;">
            <%= link_to '削除', record_path(record), method: :delete, data: { confirm: '本当に削除しますか？' }, style: "color: blue;" %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
