<%= form_with url: password_resets_path, html: { style: "text-align: center; margin-top: 150px;" } do |f| %>
  <div style="margin-bottom: 20px;">
    <%= f.label :メールアドレス, style: "font-size: 20px;" %><br>
    <%= f.email_field :email, style: "font-size: 20px; width: 300px; padding: 10px;" %>
  </div>

  <div>
    <%= f.submit '申請する', style: "font-size: 20px; padding: 10px 20px; margin-top: 30px;" %>
  </div>
<% end %>
