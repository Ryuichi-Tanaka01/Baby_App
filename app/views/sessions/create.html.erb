<%= render 'shared/header' %>
<div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 60vh;">
  <form action="<%= login_path %>" method="post" style="width: 450px;">
    <div style="margin-bottom: 10px;">
      <label for="user_id">ユーザID</label>
      <input type="text" id="user_id" name="user_id" required style="width: 100%; padding: 8px; box-sizing: border-box;">
    </div>
    <div style="margin-bottom: 30px;">
      <label for="password">メールアドレス</label>
      <input type="password" id="password" name="password" required style="width: 100%; padding: 8px; box-sizing: border-box;">
    </div>
    <div style="margin-bottom: 30px;">
      <label for="password">パスワード</label>
      <input type="password" id="password" name="password" required style="width: 100%; padding: 8px; box-sizing: border-box;">
    </div>
    <div style="margin-bottom: 30px;">
      <button type="submit" style="width: 100%; border: none; background-color: transparent; cursor: pointer;">
        <img src="<%= asset_path('new.png') %>" alt="ログイン" style="width: 30%; height: auto;"> 
      </button>
    </div>
  </form>
</div>
